                <button
                  x-ref="toggle"
                  @click="value = ! value"
                  type="button"
                  role="switch"
                  :aria-checked="value"
                  :aria-labelledby="$id('toggle-label')"
                  :class="value ? '' : 'bg-black'"
                  class="relative inline-flex w-10 rounded-full py-1 transition bg-lila-500 border-2 shadow-small border-black"
                  aria-checked="true"
                  aria-labelledby="toggle-label-1"
                  id="toggle-1"
                  ><span
                    :class="value ? 'translate-x-6 bg-white' : 'translate-x-1 '"
                    class="bg-black h-2 w-2 rounded-full transition shadow-md translate-x-1"
                    aria-hidden="true"
                  ></span></button
                >
              </div>
