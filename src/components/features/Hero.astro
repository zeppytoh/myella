---
// Assets
import Blob1 from "@/images/blobs/blob1.svg";
import Blob2 from "@/images/blobs/blob2.svg";
import Blob3 from "@/images/blobs/blob3.svg";
import Blob4 from "@/images/blobs/blob4.svg";
import { Image } from "astro:assets";
// Fundations
import Wrapper from "@/components/foundations/containers/Wrapper.astro";
import Button from "@/components/foundations/elements/Button.astro";
import Text from "@/components/foundations/elements/Text.astro";
---

<section class="relative overflow-hidden">
  <Wrapper
    variant="standard"
    class="relative py-32 overflow-hidden border-b-2 bg-accent-200 lg:py-64"
  >
    <Image
      width={800}
      height={800}
      loading="eager"
      decoding="async"
      src={Blob1}
      alt="#_"
      class="absolute hidden rounded-full lg:block shadow-black size-84 -bottom-24 right-20"
    />
    <Image
      width={800}
      height={800}
      loading="eager"
      decoding="async"
      src={Blob2}
      alt="#_"
      class="absolute hidden rounded-full lg:block shadow-black size-84 bottom-32 -right-32"
    />
    <Image
      width={800}
      height={800}
      loading="eager"
      decoding="async"
      src={Blob3}
      alt="#_"
      class="absolute hidden rounded-full lg:block shadow-black size-84 -bottom-20 left-32"
    />
    <Image
      width={800}
      height={800}
      loading="eager"
      decoding="async"
      src={Blob4}
      alt="#_"
      class="absolute hidden rounded-full lg:block shadow-black size-100 bottom-24 -left-20"
    />

    <div class="relative max-w-xl mx-auto text-center">
      <Text
        tag="h1"
        variant="displayLG"
        class="font-display font-extrabold text-black"
        >一生の友と、<span class="md:block">一生の成長を。</span>
      </Text>
      <Text tag="p" variant="textBase" class="mt-4 text-black text-balance">
        この世界で生きる私たちは、ときに自分を見失いそうになることがあります。そんなあなたに、ずっとそばで見守り、支え続けてくれる存在がいることを知ってほしいのです。
      </Text>
      <Button
        isLink={true}
        href="/"
        size="xl"
        variant="default"
        class="mx-auto mt-8 w-fit">すぐ始まる</Button
      >
    </div>
  </Wrapper>
</section>
