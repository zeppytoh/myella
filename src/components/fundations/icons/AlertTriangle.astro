    "icon-tabler",
    "icons-tabler-outline",
    "icon-tabler-arrow-alert-triangle",
    size === "xs" && xs,
    size === "sm" && sm,
    size === "base" && base,
    size === "md" && md,
    size === "lg" && lg,
    size === "xl" && xl,
