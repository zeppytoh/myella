---
// Fundations
import Text from "@/components/foundations/elements/Text.astro";
import Button from "@/components/foundations/elements/Button.astro";
import Wrapper from "@/components/foundations/containers/Wrapper.astro";
// Icons
import ArrowRight from "@/components/foundations/icons/ArrowRight.astro";
---

<section>
  <Wrapper variant="standard" class="py-24  border-t-2 bg-accent-200">
    <div class="max-w-3xl mx-auto text-center text-balance">
      <Text tag="h2" variant="displayXL" class=" font-medium tracking-tight text-black  ">
        Ready to dive in? Join Ella Mae today!
      </Text>
      <Text tag="p" variant="textXL" class=" mt-4 text-black">
        Explore the limitless possibilities of digital finance and embark on
        a journey towards financial empowerment
      </Text>
      <form
        class="justify-between mt-12 sm:flex gap-2 max-w-md mx-auto"
      >
        <label class="sr-only" for="email-address">Email address</label>
        <input
          autocomplete="email"
          class="w-full px-5 py-3 text-sm text-center placeholder-black bg-white border-2 rounded-lg shadow h-14 border-black lg:text-left focus:ring-black focus:border-black shadow-black focus:shadow-none duration-300 focus:translate-y-1"
          id="email-address"
          name="email"
          placeholder="Enter your email"
          required=""
          type="email"
        />
        <Button iconOnly size="xl" variant="default" type="button">
          <ArrowRight slot="icon" size="lg" />
        </Button>
      </form>
    </div>
  
  </Wrapper>
</section>
