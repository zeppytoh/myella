---
// Assets
import { Image } from "astro:assets";
// Fundations
import Text from "@/components/fundations/elements/Text.astro";
// Content
const { url, title, description, pubDate, image } = {
  url: "/blog/posts/" + Astro.props.post.slug,
  title: Astro.props.post.data.title,
  description: Astro.props.post.data.description,
  image: Astro.props.post.data.image.url,
  pubDate: new Date(Astro.props.post.data.pubDate).toLocaleDateString("en-US", {
    year: "numeric",
    month: "long",
    day: "2-digit",
  }),
};
---

<article
  class="relative overflow-hidden bg-white shadow duration-300 shadow-black outline-2 outline-black rounded-xl hover:shadow-none hover:translate-y-1"
>
  <a
    href={url}
    title={`Read more: ${title}`}
    aria-label={`Read blog post: ${title}`}
    class="absolute inset-0 z-10"></a>
  <Image
    src={image}
    alt={title}
    width={600}
    height={600}
    loading="eager"
    decoding="async"
    class="object-cover w-full aspect-12/8"
  />
  <div class="flex flex-col p-4 border-t-2 border-black">
    <Text tag="p" variant="textXS" class="uppercase text-base-500">
      {pubDate}
    </Text>
    <Text
      tag="h3"
      variant="textLG"
      class="mt-4 font-medium text-base-900 text-balance"
    >
      {title}
    </Text>
    <Text
      tag="p"
      variant="textBase"
      class="mt-2 text-black line-clamp-2 lg:text-balance"
    >
      {description}
    </Text>
  </div>
</article>
