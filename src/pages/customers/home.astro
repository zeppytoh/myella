---
// Assets
import Cross from "@/components/assets/Cross.astro";
import StripesBG from "@/components/assets/StripesBG.astro";
// Fundations
import BaseLayout from "@/layouts/BaseLayout.astro";
import Text from "@/components/fundations/elements/Text.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
// Components
import CustomerEntry2 from "@/components/customers/CustomerEntry2.astro";
// Content
import { getCollection } from "astro:content";
const allCustomers = await getCollection("customers");
---

<BaseLayout>
  <section>
    <Wrapper variant="standard" class="pt-32 pb-12 relative overflow-hidden">
      <!-- Top Right Plus -->
      <Cross class="-top-[0.6rem] -right-[0.65rem] z-51" />
      <!-- Top left Plus -->
      <Cross class="-top-[0.6rem] -left-[0.65rem] z-51" />
      
   
      <StripesBG
        variant="base"
        direction="horizontal"
        class="absolute hidden md:block inset-0 w-[50%] mt-auto -mx-px h-full ml-auto clip-rect-inset"
      />
      <div class="text-balance max-w-xl relative">
        <Text
          tag="h1"
          variant="displayMD"
          class="font-medium tracking-tight text-white"
        >
          Become a partner of th efuture of finance and banking with Munch.
        </Text>
        <Text tag="p" variant="textBase" class="mt-4 text-base-500">
          Access expert guides, financial insights, and security tips to manage
          your finances with confidence in the digital age.
        </Text>
      </div>
    </Wrapper>
  </section>
  <section>
    <div class="flex flex-col gap-px border-t border-base-800">
      {allCustomers.map((post) => <CustomerEntry2 post={post} />)}
    </div>
  </section>
</BaseLayout>
