---
// Fundations
import BaseLayout from "@/layouts/BaseLayout.astro";
import Text from "@/components/fundations/elements/Text.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
---

<BaseLayout>
  <Wrapper variant="standard" class="py-24">
    <Text
      tag="h1"
      variant="displaySM"
      class="font-medium uppercase text-accent-950 font-display"
      >Typography - Bricolage Grotesque
    </Text>

    <div
      class="flex flex-col mt-12 font-medium text-base-900 divide-y-2 divide-black"
    >
      <div class="py-4">
        <Text tag="p" variant="textXS"> Text XS </Text>
      </div>
      <div class="py-4">
        <Text tag="p" variant="textSM"> Text SM </Text>
      </div>
      <div class="py-4">
        <Text tag="p" variant="textBase"> Text Base </Text>
      </div>
      <div class="py-4">
        <Text tag="p" variant="textLG"> Text LG </Text>
      </div>
      <div class="py-4">
        <Text tag="p" variant="textXL"> Text XL </Text>
      </div>

      <div class="py-4">
        <Text tag="p" variant="displaySM" class="font-display upercase">
          Display SM
        </Text>
      </div>
      <div class="py-4">
        <Text tag="p" variant="displayMD" class="font-display upercase">
          Display MD
        </Text>
      </div>
      <div class="py-4">
        <Text tag="p" variant="displayLG" class="font-display upercase">
          Display LG
        </Text>
      </div>
      <div class="py-4">
        <Text tag="p" variant="displayXL" class="font-display upercase">
          Display XL
        </Text>
      </div>
      <div class="py-4">
        <Text tag="p" variant="display2XL" class="font-display upercase">
          Display 2XL
        </Text>
      </div>
      <div class="py-4">
        <Text tag="p" variant="display3XL" class="font-display upercase">
          Display 3XL
        </Text>
      </div>
      <div class="py-4">
        <Text tag="p" variant="display4XL" class="font-display upercase">
          Display 4XL
        </Text>
      </div>
      <div class="py-4">
        <Text tag="p" variant="display5XL" class="font-display upercase">
          Display 5XL
        </Text>
      </div>
      <div class="py-4">
        <Text tag="p" variant="display6XL" class="font-display upercase">
          Display 6XL
        </Text>
      </div>
    </div>
  </Wrapper>
</BaseLayout>
